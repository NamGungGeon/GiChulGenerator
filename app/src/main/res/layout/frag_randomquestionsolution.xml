<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/solutionLoadingContainer"
        android:layout_width="match_parent"
        android:background="#313131"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:id="@+id/solutionLoadingBar"
            android:progressTint="@android:color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "서버에서 문제의 답을 가져오는 중입니다..."
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@+id/solutionLoadingBar"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/solutionContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/randomQuestion_bottomMenu1"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_marginBottom="15dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="#313131"
                    android:padding="15dp"
                    android:id="@+id/solution_examInfo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_marginBottom="15dp"
                    android:textColor="#FF0000"
                    android:padding="15dp"
                    android:textSize="19dp"
                    android:id="@+id/solutionTitle"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    android:adjustViewBounds="true"
                    android:id="@+id/solutionImage"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="수능은 해설이 제공되지 않습니다."
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:id="@+id/solution_invisibleSolutionExplain"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:id="@+id/recheck_examImage"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/randomQuestion_bottomMenu1"
            android:layout_above="@id/randomQuestion_bottomMenu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/changeImageBtn"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#313131"
                android:text="문제 다시 확인"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:id="@+id/solutionSearch"
                android:text="해설강의 검색"
                android:background="#313131"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/randomQuestion_bottomMenu2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#313131"
            android:orientation="horizontal">
            <Button
                android:id="@+id/addToCheckListBtn"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:background="#313131"
                android:textColor="#FFFFFF"
                android:text= "오답노트에 추가"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/continueTryBtn"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:background="#313131"
                android:textColor="#FFFFFF"
                android:text= "문제 계속 풀기"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
    </RelativeLayout>
</FrameLayout>