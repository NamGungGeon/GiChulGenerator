<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:padding="15dp">
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="과목 선택"
                android:textColor="#000000"
                android:textSize="15dp"/>
            <Spinner
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/selectSubject"
                android:entries="@array/subjectArray"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="130dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="기관 선택"/>
            <Spinner
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/selectInstitute"
                android:entries="@array/instituteArray"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="130dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="정답률 선택"/>
            <Spinner
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/selectProbability"
                android:entries="@array/probabilityArray"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="출제기간 선택"/>
            <Spinner
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/selectPeriod"
                android:entries="@array/periodArray"></Spinner>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>