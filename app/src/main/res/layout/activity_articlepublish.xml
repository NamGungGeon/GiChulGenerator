<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/articlePublish_descript"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:padding="15dp"
        android:background="#313131"
        android:text="글 작성"/>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/articlePublishAd"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/articlePublish_descript"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        android:layout_marginBottom="10dp"
        ads:adUnitId="ca-app-pub-5333091392909120/9915083275">
    </com.google.android.gms.ads.AdView>
    <ScrollView
        android:layout_below="@+id/articlePublishAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/articlePublish_bottomMenu">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="제목을 입력하세요"
                android:background="@drawable/button_border"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:id="@+id/articlePublish_title"/>
            <EditText
                android:layout_margin="20dp"
                android:padding="10dp"
                android:gravity="left"
                android:id="@+id/articlePublish_context"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/button_border"
                android:hint="본문을 입력하세요" />
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:layout_width="1dp"
                    android:layout_height="150dp"
                    android:text="이미지 업로드"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_border"
                    android:id="@+id/articlePublish_imageUpload"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="1dp"
                    android:layout_margin="10dp"
                    android:layout_height="150dp"
                    android:background="@drawable/button_border"
                    android:id="@+id/articlePublish_imagePreview"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/articlePublish_bottomMenu"
        android:orientation="horizontal">
        <Button
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/articlePublish_publish"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="등록"
            android:background="#313131"/>
        <Button
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:id="@+id/articlePublish_cancel"
            android:text="취소"
            android:background="#313131"/>
    </LinearLayout>

</RelativeLayout>