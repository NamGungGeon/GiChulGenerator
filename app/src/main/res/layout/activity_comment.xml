<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/comment_descript"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:padding="15dp"
        android:background="#313131"
        android:text="댓글"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/comment_listContainer"
        android:layout_below="@id/comment_descript"
        android:layout_above="@+id/comment_newCommentContainer"
        android:fillViewport="true">
        <ListView
            android:id="@+id/comment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"></ListView>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/comment_newCommentContainer"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/comment_submit"
            android:id="@+id/comment_newComment"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:hint="댓글을 입력하세요"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/comment_submit"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_border"
            android:layout_marginRight="10dp"
            android:text="작성"/>
    </RelativeLayout>
</RelativeLayout>