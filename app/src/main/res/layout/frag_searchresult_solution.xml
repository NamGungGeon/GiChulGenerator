<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/searchResult_solution_loadingContainer"
        android:layout_width="match_parent"
        android:background="#313131"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:id="@+id/searchResult_solution_loadingBar"
            android:progressTint="@android:color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "서버에서 문제의 답을 가져오는 중입니다..."
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@+id/searchResult_solution_loadingBar"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/searchResult_solution_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_marginBottom="15dp"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="#313131"
            android:padding="15dp"
            android:id="@+id/searchResult_solution_title"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/searchResult_solution_title"
            android:layout_above="@+id/searchResult_solution_menuList">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_marginBottom="15dp"
                    android:textColor="#FF0000"
                    android:paddingLeft="15dp"
                    android:textSize="19dp"
                    android:id="@+id/searchResult_solution_checker"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    android:adjustViewBounds="true"
                    android:id="@+id/searchResult_solution_solution"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:scaleType="matrix"
                    android:adjustViewBounds="true"
                    android:id="@+id/rsearchResult_solution_question"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Invisible Reason"
                    android:gravity="center"
                    android:id="@+id/searchResult_invisibleReason"
                    android:textSize="18dp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </ScrollView>
        <HorizontalScrollView
            android:id="@+id/searchResult_solution_menuList"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#313131"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#313131"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/searchResult_searchSolution"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#313131"
                    android:textSize="18dp"
                    android:textColor="#FFFFFF"
                    android:text= "해설강의 검색"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/searchResult_solution_addToCheckListBtn"
                    android:background="#313131"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="18dp"
                    android:textColor="#FFFFFF"
                    android:text= "오답노트에 추가"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchResult_solution_changeImageBtn"
                    android:background="#313131"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="18dp"
                    android:textColor="#FFFFFF"
                    android:text="문제 다시 확인"/>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</FrameLayout>