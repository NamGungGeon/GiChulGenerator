<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:id="@+id/examtry_loadingContainer">
        <ProgressBar
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:id="@+id/examtry_loadingBar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/examtry_loadingBar"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="서버에서 문제를 가져오는 중입니다..."
            android:textSize="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/examtry_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="@color/background"
            android:padding="15dp"
            android:id="@+id/examTitle"/>
        <ScrollView
            android:layout_below="@id/examTitle"
            android:layout_above="@+id/tryMenuBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:text="정답률"
                        android:layout_alignParentRight="true"
                        android:id="@+id/examProbability"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:scaleType="matrix"
                    android:adjustViewBounds="true"
                    android:id="@+id/question"/>
                <RadioGroup
                    android:id="@+id/answer_radio"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/one"
                        android:text="1번"
                        android:checked="true"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2번"
                        android:id="@+id/two"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3번"
                        android:id="@+id/three"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4번"
                        android:id="@+id/four"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5번"
                        android:id="@+id/five"/>
                </RadioGroup>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:padding="20dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/button_border"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:hint="정답을 입력하세요"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:id="@+id/answer_text"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/tryMenuBar"
            android:layout_above="@+id/randomQuestion_adWrapper"
            android:orientation="vertical"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timer"
                android:text="timer"
                android:textSize="15dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#444444"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"
                    android:text="다른 문제 받기"
                    android:id="@+id/regenerateBtn"
                    android:background="@color/background"
                    android:textColor="#FFFFFF"
                    android:layout_weight="1"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:background="@color/background"
                    android:text="답안 제출"
                    android:id="@+id/submit"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/background"
            android:id="@+id/randomQuestion_adWrapper">
            <com.google.android.gms.ads.AdView
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-5333091392909120/9071628017"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/randomQuestion_ad"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
            </com.google.android.gms.ads.AdView>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>