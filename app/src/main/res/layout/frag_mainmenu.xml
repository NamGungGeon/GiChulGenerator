<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_mainmenu"
    >
    <!-- Ad is not using now -->
    <!--
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainPageAd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
    -->
    <RelativeLayout
        android:layout_above="@+id/bottomQuickMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C8E6F2"
        android:id="@+id/mainMenuContainer">
        <!-- Left Basic Menu List-->
        <FrameLayout
            android:id="@+id/basicMenuList"
            android:background="#77FFFFFF"
            android:layout_width="120dp"
            android:layout_height="match_parent">

            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Image Icon -->
                    <Button
                        android:id="@+id/goToStudy"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/gotostudy_icon"/>

                    <Button
                        android:id="@+id/searchExam"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/search_icon"/>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
        <!-- Right Status Checker -->
        <RelativeLayout
            android:layout_toRightOf="@id/basicMenuList"
            android:id="@+id/statusCheckList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">
                    <!-- Status Description -->
                    <TextView
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingLeft="15dp"
                        android:text="열심히 하고 있나요?"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="#66FFFFFF"
                        android:textSize="25dp" />
                    <TextView
                        android:id="@+id/specialMessage"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:background="#66FFFFFF"
                        android:layout_margin="20dp"
                        android:text="Special Message"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/scheduler"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="center"
                        android:background="#66FFFFFF"
                        android:layout_margin="20dp"
                        android:text="Scheduler"
                        android:textColor="#000000"
                        android:textSize="25dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:background="#66FFFFFF"
                        android:layout_margin="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/myWish"
                            android:textSize="23dp"
                            android:layout_marginRight="20dp"
                            android:textColor="#000000"
                            android:text="나의 목표는"/>
                        <ImageView
                            android:id="@+id/mainmenu_univImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_toRightOf="@id/myWish"
                            android:layout_centerVertical="true"
                            android:src="@drawable/konkuk" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/todayInfo"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:background="#66FFFFFF"
                        android:layout_margin="20dp"
                        android:text="오늘 푼 문제 갯수 표시"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>

    <!-- Bottom Quick Menu -->
    <RelativeLayout
        android:background="@drawable/menulist_top_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomQuickMenu">
        <ImageView
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/list_icon"
            android:id="@+id/menuListBtn"
            android:background="@drawable/menulist_right_divider"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/help"
            android:src="@drawable/help_icon"
            android:background="@drawable/menulist_left_divider"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/checkHistory"/>
        <ImageView
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/checkHistory"
            android:background="@drawable/menulist_left_divider"
            android:src="@drawable/checkhistory_icon"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/calender"/>
        <ImageView
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/calender"
            android:background="@drawable/menulist_left_divider"
            android:src="@drawable/calendar_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <!-- MenuList -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomQuickMenu"
        android:background="#9BD5E0"
        android:id="@+id/menuList"
        android:visibility="gone"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/settingIcon"
                        android:background="@drawable/setting_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/settingIcon"
                        android:text="메뉴"
                        android:layout_marginTop="25dp"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/menuList_notification"
                            android:background="@drawable/notification_icon"/>
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/menuList_devInfo"
                            android:background="@drawable/devinfo_icon"/>
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/delete_icon"
                            android:id="@+id/menuList_allHistoryDelete"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/menuList_qna"
                            android:background="@drawable/qna_icon"/>
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/freeboard_icon"
                            android:id="@+id/menuList_freeBoard"/>
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/donation_icon"
                            android:id="@+id/menuList_donation"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>