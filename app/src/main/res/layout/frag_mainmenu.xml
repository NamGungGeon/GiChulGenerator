<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainMenuContainer">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/list_icon"
            android:id="@+id/menuList"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/checkHistory"
            android:layout_marginRight="15dp"
            android:src="@drawable/checkhistory_icon"
            android:layout_toLeftOf="@+id/calender"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/calender"
            android:src="@drawable/calendar_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/specialMessage"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="성실함과 노력만이 합격으로 가는 지름길입니다!"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/specialMessage"
            android:text="날짜와 푼 문제 갯수 표시"
            android:layout_marginBottom="40dp"/>
    </RelativeLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:text="문제 풀러 가기"
        android:id="@+id/goToStudy"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>