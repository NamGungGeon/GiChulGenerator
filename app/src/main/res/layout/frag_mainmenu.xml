<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313131"
    >
    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수능 수학 종결자"
        android:gravity="center"
        android:textSize="25dp"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:background="#444444"
        android:layout_alignParentTop="true"
        android:id="@+id/mainmenu_title"/>

    <!-- Status and Scheduler -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainmenu_pagerWrapper"
        android:layout_below="@id/mainmenu_title"
        android:layout_above="@+id/bottomMenuWrapper">
        <ImageView
            android:id="@+id/status_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/main_statusPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:layout_margin="30dp">
        </android.support.v4.view.ViewPager>
        <ImageView
            android:id="@+id/status_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/next"
            android:layout_alignParentRight="true"/>

        <!-- Schedular -->
        <TextView
            android:id="@+id/scheduler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="수능 D-day"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/main_statusPager"
            android:textSize="21dp"/>
    </RelativeLayout>

    <!-- Bottom Menu List-->
    <HorizontalScrollView
        android:paddingBottom="10dp"
        android:layout_above="@+id/mainmenu_adWrapper"
        android:scrollbars="none"
        android:background="#444444"
        android:id="@+id/bottomMenuWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <!-- Image Icon -->
                <Button
                    android:id="@+id/goToStudy"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/gotostudy_icon"/>
                <Button
                    android:id="@+id/searchExam"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/search_icon"/>
                <Button
                    android:id="@+id/goToExam"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/goexam_icon"/>
                <Button
                    android:id="@+id/examResultBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/examresult_icon"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:id="@+id/checkListBtn"
                    android:background="@drawable/checklist_icon"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:id="@+id/historyListBtn"
                    android:background="@drawable/checkhistory_icon"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:id="@+id/freeboard"
                    android:background="@drawable/freeboard_icon"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:id="@+id/qna"
                    android:background="@drawable/qna_icon"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/donation_icon"
                    android:id="@+id/menuList_donation"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/delete_icon"
                    android:id="@+id/menuList_allHistoryDelete"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:id="@+id/menuList_devInfo"
                    android:background="@drawable/devinfo_icon"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:id="@+id/help"
                    android:background="@drawable/help_icon"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- AD -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#444444"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/mainmenu_adWrapper">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mainmenu_ad"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5333091392909120/6072450302">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>
</RelativeLayout>