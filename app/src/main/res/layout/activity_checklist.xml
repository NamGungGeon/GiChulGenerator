<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/checkList_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/checkList_title"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:background="#313131"
            android:padding="15dp"
            android:text="오답노트"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/checkList_title"
            android:id="@+id/checkList_filterContainer"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="과목 필터"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:paddingLeft="25dp"
                android:id="@+id/checkList_filter"
                android:entries="@array/subjectArray">
            </Spinner>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/checkList_filterContainer"
            android:fillViewport="true">
            <ListView
                android:id="@+id/checkList"
                android:divider="#AAAAAA"
                android:dividerHeight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>