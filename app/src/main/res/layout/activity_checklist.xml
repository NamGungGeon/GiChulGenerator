<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/checkList_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/checkList_title"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:background="@color/background"
            android:padding="15dp"
            android:text="오답노트"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/checkList_title"
            android:id="@+id/checkList_filterContainer"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="과목 필터"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:paddingLeft="25dp"
                android:id="@+id/checkList_filter"
                android:entries="@array/filter_subjectArray">
            </Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="right"
                android:id="@+id/checkList_random"
                android:textColor="@color/background"
                android:text="랜덤으로 풀기>"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/checkList_filterContainer"
            android:layout_above="@id/checkListAdWrapper"
            android:fillViewport="true">
            <ListView
                android:id="@+id/checkList"
                android:divider="#AAAAAA"
                android:dividerHeight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkListAdWrapper"
            android:background="@color/background"
            android:layout_alignParentBottom="true">
            <com.google.android.gms.ads.AdView
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-5333091392909120/9071628017"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/checkListAd"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true">
            </com.google.android.gms.ads.AdView>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>