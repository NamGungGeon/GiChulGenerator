<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/freeboard_loadingContainer"
        android:layout_width="match_parent"
        android:background="#313131"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:id="@+id/freeboard_loadingBar"
            android:progressTint="@android:color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "데이터를 가져오는 중입니다"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@+id/freeboard_loadingBar"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/freeboard_container">
        <TextView
            android:id="@+id/freeboard_title"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:padding="15dp"
            android:background="#313131"
            android:text="자유게시판"/>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/freeboardAd"
            android:layout_below="@id/freeboard_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5333091392909120/6882150859">
        </com.google.android.gms.ads.AdView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/freeboard_menuBar"
            android:layout_below="@id/freeboardAd"
            android:fillViewport="true">
            <ListView
                android:id="@+id/freeboard_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#313131"
            android:id="@+id/freeboard_menuBar"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#313131"
                android:textColor="#FFFFFF"
                android:id="@+id/freeboard_search"
                android:text="검색"/>
            <Button
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"
                android:background="#313131"
                android:id="@+id/freeboard_publishArticle"
                android:text="글쓰기"/>
            <Button
                android:layout_weight="1"
                android:layout_width="1dp"
                android:textColor="#FFFFFF"
                android:layout_height="match_parent"
                android:background="#313131"
                android:id="@+id/freeboard_refresh"
                android:text="새로고침"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>